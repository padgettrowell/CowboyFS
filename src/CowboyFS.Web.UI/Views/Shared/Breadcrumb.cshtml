@model CowboyFS.Web.UI.ViewModels.BrowseViewModel
<div data-role="controlgroup" data-type="horizontal" data-mini="true">
    <!-- home -->
    @Html.ActionLink("Home", "Index",null, new {data_icon="home", data_role="button"} )

    <!-- library -->
    @if (Model.CurrentLibrary != null)
    {
        @Html.ActionLink(Model.CurrentLibrary.DisplayName, "Index", new { library = Model.CurrentLibrary.LibraryId }, new {data_role="button"})    
    }
            
    <!-- Path Parts -->
    @foreach (var path in Model.PathCrumbs)
    {
        @Html.ActionLink(path.Display, "Index", new { library = Model.CurrentLibrary.LibraryId, relPath = path.RelativePath }, new {data_role="button"})
    }
</div>

